<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="field">
    <%= form.label :catalog_price %>
    <%= form.number_field :catalog_price, class: 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="field">
    <%= form.label :cross_price %>
    <%= form.number_field :cross_price, class: 'max-w-lg block w-full shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm border-gray-300 rounded-md' %>
  </div>

  <div class="relative flex items-start">
    <div class="flex items-center h-5">
      <%= form.check_box :customizable, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
    </div>
    <div class="ml-3 text-sm">
      <label for="comments" class="font-medium text-gray-700">Comments</label>
      <%= form.label :customizable, class: "font-medium text-gray-700" %>
      <p class="text-gray-500">Get notified when someones posts a comment on a posting.</p>
    </div>
  </div>

  <div class="relative flex items-start">
    <div class="flex items-center h-5">
      <%= form.check_box :active, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
    </div>
    <div class="ml-3 text-sm">
      <label for="comments" class="font-medium text-gray-700">Comments</label>
      <%= form.label :active, class: "font-medium text-gray-700" %>
      <p class="text-gray-500">Get notified when someones posts a comment on a posting.</p>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
